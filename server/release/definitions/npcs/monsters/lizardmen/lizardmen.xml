<definitions>

	<!-- Lizardman -->
	<npc id="lizardman"  inherit="monster_base">
		<strproperty name="monsterspeech" value="lizardman" />
		<basescript>speech.monster</basescript>
		<name><random list="NAMES_LIZARDMAN" /></name>
		<id><random list="NPCIDS_LIZARDMAN" /></id>
		<inherit id="KARMA_L2" />
		<inherit id="FAME_L2" />
		<!-- Stats -->
		<str><random min="96" max="120"/></str>
		<dex><random min="86" max="105"/></dex>
		<int><random min="36" max="60"/></int>
		<maxhitpoints><random min="58" max="72" /></maxhitpoints>
		<!-- Skills -->
		<magicresistance><random min="351" max="600"/></magicresistance>
		<tactics><random min="551" max="800"/></tactics>
		<wrestling><random min="501" max="700"/></wrestling>
		<!-- Damage -->
		<mindamage>8</mindamage>
		<maxdamage>12</maxdamage>
		<!-- Resists -->
		<tag name="res_cold" value="5,10" type="int" />
		<tag name="res_fire" value="5,10" type="int" />
		<tag name="res_physical" value="25,30" type="int" />
		<tag name="res_poison" value="10,20" type="int" />
		<!-- Misc. -->
		<desc>These reptilian creatures are savage, but very Intelligent - perhaps equal in intellect to humanity, though without the moderating influences of civilization. They love gold, and will play the brigandon parties that are insufficiently protected.</desc>
		<!-- Missing: Weapon -->
		<lootpacks>lootpack_meager</lootpacks>
		<carve>carve_lizard_man_medium</carve>
		<category>Monsters\Lizardmen\Lizardman (Random)</category>
		<strproperty name="slayer_group" value="lizards" />
		<!-- Carve -->
		<intproperty name="carve_hides" value="12" />
		<strproperty name="carve_hides_type" value="spined" />
		<intproperty name="carve_meat" value="1" />
	</npc>

	<!-- a lizard man 1-->
	<npc id="lizardman_1" inherit="lizardman">
		<id>33</id>
		<category>Monsters\Lizardmen\Lizardman 1</category>
	</npc>

	<!-- Lizardman 2 -->
